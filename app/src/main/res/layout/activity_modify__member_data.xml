                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:buttonTint="@color/yellow"
                            android:checked="true"
                            android:text="男"
                            android:textColor="@color/Textcolor" />

                        <RadioButton
